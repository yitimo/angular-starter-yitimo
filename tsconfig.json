{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": false,
        "baseUrl": "./src",
        "lib": [
            "dom",
            "es2015"
        ],
        "paths": {
            "@angular/*": ["./node_modules/@angular/*"]
        },
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src"
    ]
}
